{
  "name": "rs-clone",
  "version": "1.0.0",
  "main": "server.js",
  "author": "the best team ever",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.ts",
    "server": "cross-env NODE_ENV=development nodemon server.ts",
    "client": "yarn --cwd client run start",
    "client:install": "yarn --cwd client add react-scripts --save",
    "client:build": "yarn --cwd client run build",
    "development": "concurrently \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "yarn client:install && yarn client:build"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.16",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0",
    "socket.io": "^4.5.4",
    "uuid": "^9.0.0"
  }
}
